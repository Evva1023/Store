{{#> app}}
{{#*inline "content"}}
<div class="row">
    {{#with viewData.product}}
    <div class="card mb-3">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="/images/{{image}}" class="img-fluid rounded-start">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h3 class="card-title">
                        {{name}} (${{price}})
                    </h3>
                    <p class="card-text">{{description}}</p>
                    <p class="card-text"><small class="text-muted">Add to cart</small></p>
                </div>
            </div>
        </div>
    </div>
    {{/with}}
</div>
{{/inline}}
{{/app}}